<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-wEmeIV1mKuiNpC+IOBjI7aAzPcEZeedi5yW5f2yOq55WWLwNGmvvx4Um1vskeMj0"
      crossorigin="anonymous"
    />
  </head>
  <body class="container fluid-container">
    <h1>Search for Slots</h1>
    <form action="/" method="POST" class="row row-cols-lg-auto g-3 align-items-center">
      <div class="col-12">
        <div class="input-group">
          <div class="input-group-text">#</div>
          <input type="number" class="form-control" name="pincode" id="" max="999999" placeholder="600001" />
      </div>
      </div>
      <div class="col-12">
        <button class="btn btn-primary" type="submit">Enter Pincode</button>
      </div>
    </form>
    <hr>
    <% if(sessions.length > 0){ %>
    <h1>Vaccinations for <%= sessions[0].pincode %></h1>
    <ul class= "list-group list-group-numbered">
      <% sessions.forEach(function(session) { %>
      <div>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><%= session.name %></div>
            <%=session.fee_type%> - <%=session.date%>
            <a href="/0" class="" aria-current="true">
              More Details
            </a>
          </div>
          <span class="badge bg-primary rounded-pill"><%=session.available_capacity%> Seats</span> 
          <br>
          <span class="badge bg-secondary rounded-pill">Age: <%=session.min_age_limit%>+</span>
          
      </li>
      </div>
      <% }); %>
    </ul>
    <% } else{ %>
    <h4>No Vaccinations available now..</h4>
    <% } %>
  </body>
</html>
